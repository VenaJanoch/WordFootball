<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gras_bg"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/languageLayout"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/test"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/lg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/welcome_red"
            android:text="Vyberte jazyk hry:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <RadioGroup
            android:layout_width="180dp"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="223dp"
            android:orientation="horizontal"
            android:layout_gravity="center">


                <RadioButton
                    android:id="@+id/rb_cze"
                    android:checked="false"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CZE"
                    android:fontFamily="@font/bluefisth_scratched"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="24sp"
                    android:onClick="languageSelect"
                    />

                <RadioButton
                    android:id="@+id/rb_eng"
                    android:checked="false"
                    android:layout_width="67dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:text="ENG"
                    android:fontFamily="@font/bluefisth_scratched"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="24sp"
                    android:onClick="languageSelect"
                    />



        </RadioGroup>
    </LinearLayout>
<LinearLayout
    android:id="@+id/languageBTLayout"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    >

    <Button
        android:id="@+id/gameBT"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:onClick="showSettingActivity"
        android:background="@drawable/test"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Hraj!"
         />

    <Button
        android:id="@+id/dictionaryBT"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:onClick="showDictionary"
        android:text="Zobraz slovnÃ­k"
        android:background="@drawable/test"
        android:layout_gravity="center"
        android:layout_margin="10dp"
         />

</LinearLayout>
</LinearLayout>